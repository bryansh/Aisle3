{
  "name": "aisle3",
  "version": "0.2.1",
  "description": "",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
    "tauri": "tauri",
    "release": "node scripts/release.cjs",
    "release:patch": "node scripts/release.cjs patch",
    "release:minor": "node scripts/release.cjs minor",
    "release:major": "node scripts/release.cjs major",
    "test": "vitest --config vitest.config.js",
    "test:run": "vitest run --config vitest.config.js",
    "test:ui": "vitest --ui --config vitest.config.js",
    "test:coverage": "vitest run --coverage --config vitest.config.js",
    "test:watch": "vitest --watch --config vitest.config.js",
    "test:rust": "cd src-tauri && cargo test",
    "test:rust:watch": "cd src-tauri && cargo watch -x test",
    "test:all": "npm run test:run && npm run test:rust",
    "test:working": "npm run test:services && npx vitest run src/tests/stores/emailStore.simple.test.js --config vitest.config.js",
    "test:ci": "npm run test:working && npm run test:rust",
    "test:components": "vitest run src/tests/components --config vitest.config.js",
    "test:stores": "vitest run src/tests/stores --config vitest.config.js",
    "test:services": "vitest run src/tests/services --config vitest.config.js",
    "test:integration": "vitest run src/tests/integration --config vitest.config.js",
    "test:e2e": "playwright test --config=playwright-ct.config.js",
    "test:e2e:ui": "playwright test --ui --config=playwright-ct.config.js",
    "test:e2e:headed": "playwright test --config=playwright-ct.config.js --headed",
    "test:e2e:debug": "playwright test --config=playwright-ct.config.js --debug",
    "test:playwright:install": "playwright install"
  },
  "license": "MIT",
  "dependencies": {
    "@tauri-apps/api": "^2.5.0",
    "@tauri-apps/plugin-opener": "^2",
    "@types/he": "^1.2.3",
    "dompurify": "^3.2.6",
    "he": "^1.2.0",
    "lucide-svelte": "^0.511.0"
  },
  "devDependencies": {
    "@playwright/experimental-ct-svelte": "^1.52.0",
    "@playwright/test": "^1.52.0",
    "@sveltejs/adapter-static": "^3.0.6",
    "@sveltejs/kit": "^2.9.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.0",
    "@tailwindcss/postcss": "^4.1.8",
    "@tailwindcss/typography": "^0.5.16",
    "@tauri-apps/cli": "^2",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/svelte": "^5.2.8",
    "@testing-library/user-event": "^14.6.1",
    "@types/dompurify": "^3.0.5",
    "@vitest/ui": "^3.2.2",
    "autoprefixer": "^10.4.21",
    "c8": "^10.1.3",
    "flowbite": "^3.1.2",
    "flowbite-svelte": "^1.5.1",
    "happy-dom": "^17.6.3",
    "jsdom": "^26.1.0",
